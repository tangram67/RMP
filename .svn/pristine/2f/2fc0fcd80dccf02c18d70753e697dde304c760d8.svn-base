#ifndef HTMLCONSTS_H_
#define HTMLCONSTS_H_

#include "gcc.h"

namespace html {

/*
 * HTML entities
 * See https://www.w3schools.com/html/html_entities.asp
 */
STATIC_CONST char HTML_SPACE[]   = "&nbsp;";   // non-breaking space
STATIC_CONST char HTML_ZWSP[]    = "&#8203;";  // zero width space
STATIC_CONST char HTML_LESS[]    = "&lt;";     // <
STATIC_CONST char HTML_GREATER[] = "&gt;";     // >
STATIC_CONST char HTML_AMPER[]   = "&amp;";    // &
STATIC_CONST char HTML_QUOTE[]   = "&quot;";   // "
STATIC_CONST char HTML_APOS[]    = "&apos;";   // '
STATIC_CONST char HTML_CENT[]    = "&cent;";   // ¢
STATIC_CONST char HTML_POUND[]   = "&pound;";  // £
STATIC_CONST char HTML_EURO[]    = "&euro;";   // €
STATIC_CONST char HTML_YEN[]     = "&yen;";    // ¥
STATIC_CONST char HTML_COPY[]    = "&copy;";   // ©
STATIC_CONST char HTML_REG[]     = "&reg;";    // ®
STATIC_CONST char HTML_RAQUOTE[] = "&raquo;";  // »
STATIC_CONST char HTML_LAQUOTE[] = "&laquo;";  // «
STATIC_CONST char HTML_DEGREE[]  = "&deg;";    // °
STATIC_CONST char HTML_PARA[]    = "&para;";   // ¶

STATIC_CONST char HTML_HYPHEN[]  = "&shy;";    // soft word brake with hyphen
STATIC_CONST char HTML_FEED[]    = "&#10;";    // hard line feed

STATIC_CONST char HTML_BREAK[]   = "<br>";     // hard line break
STATIC_CONST char HTML_WRAP[]    = "<wbr>";    // soft word break

STATIC_CONST char HTML_REPL[]    = "&#xfffd;"; // □ Unicode replacement char
STATIC_CONST char HTML_WHITE[]   = "&#x25a1;"; // � Unicode replacement char

static const std::string STR_SPACE   = HTML_SPACE;   // non-breaking space
static const std::string STR_ZWSP    = HTML_ZWSP;    // zero width space
static const std::string STR_LESS    = HTML_LESS;    // <
static const std::string STR_GREATER = HTML_GREATER; // >
static const std::string STR_AMPER   = HTML_AMPER;   // &
static const std::string STR_QUOTE   = HTML_QUOTE;   // "
static const std::string STR_APOS    = HTML_APOS;    // '
static const std::string STR_CENT    = HTML_CENT;    // ¢
static const std::string STR_POUND   = HTML_POUND;   // £
static const std::string STR_EURO    = HTML_EURO;    // €
static const std::string STR_YEN     = HTML_YEN;     // ¥
static const std::string STR_COPY    = HTML_COPY;    // ©
static const std::string STR_REG     = HTML_REG;     // ®
static const std::string STR_RAQUOTE = HTML_RAQUOTE; // »
static const std::string STR_LAQUOTE = HTML_LAQUOTE; // «
static const std::string STR_DEGREE  = HTML_DEGREE;  // °
static const std::string STR_PARA    = HTML_PARA;    // ¶

static const std::string STR_HYPHEN  = HTML_HYPHEN;  // soft word brake with hyphen
static const std::string STR_FEED    = HTML_FEED;    // hard line feed

static const std::string STR_BREAK   = HTML_BREAK;   // hard line break
static const std::string STR_WRAP    = HTML_WRAP;    // soft word break

static const std::string STR_REPL    = HTML_REPL;    // � Unicode replacement char
static const std::string STR_WHITE   = HTML_WHITE;   // □ Unicode replacement char

} /* namespace html */

#endif /* HTMLCONSTS_H_ */
